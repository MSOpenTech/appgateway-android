<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dip"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/tab_left_edge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/tab_inactive_left" />

    <ImageView
        android:id="@+id/tab_right_edge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/tab_inactive_right" />

    <ImageView
        android:id="@+id/tab_filling"
        android:layout_width="190dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/tab_widget_filling" />

    <ImageButton
        android:id="@+id/close_tab_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dip"
        android:background="@drawable/close_tab"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tab_title"
        style="?android:attr/tabWidgetStyle"
        android:layout_width="120dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="#41454c"
        android:textSize="@dimen/tab_title_text"
        android:textStyle="bold" />

</RelativeLayout>