<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingTop="5dip"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/dark_grey"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/list_header_separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_header"
        android:src="@color/dark_grey" />

    <TextView
        android:id="@+id/list_header_action_button"
        style="@style/AppGateWayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/list_header_separator"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:text="@string/list_header_action_button"
        android:textSize="11dip" 
        android:layout_centerVertical="true"
        android:visibility="gone"/>

</RelativeLayout>