<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
            <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/bookmarks_item_delete"
        android:paddingBottom="11dip"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingTop="11dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/bookmarks_item_text"
            android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18dip" 
/>

        <TextView
            android:id="@+id/bookmarks_item_url"
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:textSize="14dip" />

</LinearLayout>

    <TextView
        android:id="@id/bookmarks_item_delete"
        style="@style/buttonStyle"        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="6dip"
        android:focusable="false"
        android:onClick="onDeleteClick"
        android:text="@string/bookmarks_favorites_item_delete"
        android:textSize="11dip" />

</RelativeLayout>